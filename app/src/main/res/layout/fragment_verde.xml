<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".fragments.RojoFragment"
    android:background="@android:color/darker_gray">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:id="@+id/idLayoutFondo"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:background="@color/colorAzulInternet">
            <TextView
                android:id="@+id/icono_barra"
                android:layout_width="40dp"
                android:layout_height="45dp"
                android:layout_gravity="center"
                android:layout_marginLeft="80dp"
                android:layout_marginRight="16dp"
                android:background="@drawable/pisto"
                android:textStyle="bold" />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Movimientos"
                android:layout_marginLeft="180dp"

                android:layout_gravity="fill"
                android:textSize="25sp"
                android:textStyle="bold"
                android:textColor="@color/colorBlancoTransparente"/>
        </RelativeLayout>
    </LinearLayout>


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp">
        <TextView
            android:id="@+id/Icono_Spinner"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:background="@drawable/money1"
            android:textColor="@color/colorBlancoTransparente"
            android:textSize="35sp"
            android:textStyle="bold"
            tools:ignore="MissingConstraints" />

        <Spinner
            android:id="@+id/spinner_Movimiento"
            android:layout_width="200dp"
            android:layout_height="match_parent"
            android:layout_marginRight="80dp"
            android:layout_marginLeft="50dp"
            android:entries="@array/tipo_movimiento"
            style="@style/spinner1"/>
    </LinearLayout>
    <View
        android:layout_width="fill_parent"
        android:layout_marginLeft="90dp"
        android:layout_height="10dp"
        android:background="@android:color/darker_gray"/>

    <View
        android:layout_width="fill_parent"
        android:layout_marginLeft="90dp"
        android:layout_height="30dp"
        android:background="@android:color/darker_gray"/>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp">
        <TextView
            android:id="@+id/Icono_Spinner_Mes"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:background="@drawable/fecha"
            android:textColor="@color/colorBlancoTransparente"
            android:textSize="35sp"
            android:textStyle="bold"
            tools:ignore="MissingConstraints" />
        <Spinner
            android:id="@+id/spinner_Mes"
            android:layout_width="200dp"
            android:layout_height="match_parent"
            android:layout_marginRight="80dp"
            android:layout_marginLeft="50dp"
            android:entries="@array/tipo_Mes"/>
    </LinearLayout>
    <View
        android:layout_width="fill_parent"
        android:layout_marginLeft="90dp"
        android:layout_height="30dp"
        android:background="@android:color/darker_gray"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp">
        <Button
            android:id="@+id/btn_Movimiento"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="210dp"
            android:layout_marginTop="0dp"
            android:text="Confirmar" />

    </LinearLayout>
    android:layout_width="fill_parent"
    android:layout_marginLeft="90dp"
    android:layout_height="30dp"
    android:background="@android:color/darker_gray"/>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp">
        <ListView
        android:id="@+id/listViewPersonas"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
            android:layout_marginLeft="0dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="10dp"/>

    </LinearLayout>


</LinearLayout>
