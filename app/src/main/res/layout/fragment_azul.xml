<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".fragments.RojoFragment"
    android:background="@android:color/darker_gray">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:id="@+id/idLayoutFondo"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:background="@color/colorRojo">
            <TextView
                android:id="@+id/icono_barra"
                android:layout_width="40dp"
                android:layout_height="45dp"
                android:layout_gravity="center"
                android:layout_marginLeft="80dp"
                android:layout_marginRight="16dp"
                android:background="@drawable/pisto"
                android:textStyle="bold" />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Gastos"
                android:layout_marginLeft="180dp"

                android:layout_gravity="fill"
                android:textSize="25sp"
                android:textStyle="bold"
                android:textColor="@color/colorBlancoTransparente"/>
        </RelativeLayout>
    </LinearLayout>


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp">
        <TextView
            android:id="@+id/Icono_Cantidad_Ingreso"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:background="@drawable/ingreso"
            android:textSize="35sp"
            android:textStyle="bold"
            tools:ignore="MissingConstraints" />


        <EditText
            android:id="@+id/txt_Cantidad_Gasto"
            android:layout_width="200dp"
            android:layout_height="80dp"
            android:layout_marginRight="80dp"
            android:layout_marginLeft="50dp"
            android:ems="10"
            android:inputType="number"
            android:hint="Cantidad"
            android:textColorHint="@color/colorGris"
            android:textColor="@color/colorNegro"
            android:textSize="20sp"
            tools:ignore="MissingConstraints"/>


    </LinearLayout>
    <View
        android:layout_width="fill_parent"
        android:layout_marginLeft="90dp"
        android:layout_height="30dp"
        android:background="@android:color/darker_gray"/>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp">
        <TextView
            android:id="@+id/Icono_Spinner"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:background="@drawable/money1"
            android:textColor="@color/colorBlancoTransparente"
            android:textSize="35sp"
            android:textStyle="bold"
            tools:ignore="MissingConstraints" />

        <Spinner
            android:id="@+id/spinner_1_gasto"
            android:background="@drawable/style_spinner2"
            android:layout_width="200dp"
            android:layout_height="match_parent"
            android:layout_marginRight="80dp"
            android:layout_marginLeft="50dp"
            android:entries="@array/tipo_entrada" />
    </LinearLayout>
    <View
        android:layout_width="fill_parent"
        android:layout_marginLeft="90dp"
        android:layout_height="30dp"
        android:background="@android:color/darker_gray"/>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp">
        <TextView
            android:id="@+id/Icono_Spinner_Ayuda"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:background="@drawable/pregunta1"
            android:textColor="@color/colorBlancoTransparente"
            android:textSize="35sp"
            android:textStyle="bold"
            tools:ignore="MissingConstraints" />

        <Spinner
            android:id="@+id/spinner_Ayuda_gasto"
            android:background="@drawable/style_spinner2"
            android:layout_width="200dp"
            android:layout_height="match_parent"
            android:layout_marginRight="80dp"
            android:layout_marginLeft="50dp"
            android:entries="@array/tipo_gasto"/>

    </LinearLayout>
    <View
        android:layout_width="fill_parent"
        android:layout_marginLeft="90dp"
        android:layout_height="30dp"
        android:background="@android:color/darker_gray"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp">
        <TextView
            android:id="@+id/icono_descripcion"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:background="@drawable/lapiz1"
            android:textColor="@color/colorBlancoTransparente"
            android:textSize="35sp"
            android:textStyle="bold"
            tools:ignore="MissingConstraints" />
        <EditText
            android:id="@+id/descripcion_gasto"
            android:layout_width="200dp"
            android:layout_height="50dp"
            android:layout_marginRight="80dp"
            android:layout_marginLeft="50dp"
            android:ems="10"
            android:hint="Escriba una Descripcion breve "
            android:textColorHint="@color/colorGris"
            android:textColor="@color/colorNegro"
            android:textSize="14dp"
            android:textStyle="bold"
            tools:ignore="MissingConstraints"/>

    </LinearLayout>
    <View
        android:layout_width="fill_parent"
        android:layout_marginLeft="90dp"
        android:layout_height="10dp"
        android:background="@android:color/darker_gray"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp">

        <TextView
            android:id="@+id/icono_fecha"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginLeft="0dp"
            android:layout_marginTop="60dp"
            android:background="@drawable/fecha"
            android:textSize="35sp"
            android:textStyle="bold"
            tools:ignore="MissingConstraints" />
        <DatePicker
            android:id="@+id/fecha_gasto"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="40dp"
            android:layout_marginTop="0dp"
            android:calendarViewShown="false"
            android:datePickerMode="spinner" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp">
        <Button
            android:id="@+id/buttongastos"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="210dp"
            android:layout_marginTop="0dp"
            android:text="Confirmar" />

    </LinearLayout>



</LinearLayout>
