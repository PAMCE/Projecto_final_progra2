<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".fragments.RojoFragment"
    android:background="@android:color/darker_gray">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:id="@+id/idLayoutFondo"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:background="@color/colorNegro">
            <TextView
                android:id="@+id/icono_barra"
                android:layout_width="40dp"
                android:layout_height="45dp"
                android:layout_gravity="center"
                android:layout_marginLeft="80dp"
                android:layout_marginRight="16dp"
                android:background="@drawable/pisto"
                android:textStyle="bold" />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Inicio"
                android:layout_marginLeft="180dp"

                android:layout_gravity="fill"
                android:textSize="25sp"
                android:textStyle="bold"
                android:textColor="@color/colorBlancoTransparente"/>
        </RelativeLayout>
    </LinearLayout>
    <View
        android:layout_width="fill_parent"
        android:layout_marginLeft="90dp"
        android:layout_height="100dp"
        android:background="@android:color/darker_gray"/>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp">
        <TextView
            android:id="@+id/Icono_Cantidad_Ingreso"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:background="@drawable/money1"
            android:textSize="35sp"
            android:textStyle="bold"
            tools:ignore="MissingConstraints" />


        <EditText
            android:id="@+id/txt_Efectivo"
            android:layout_width="200dp"
            android:layout_height="80dp"
            android:layout_marginRight="80dp"
            android:layout_marginLeft="50dp"
            android:ems="10"
            android:editable="false"
            android:hint="Efectivo"
            android:textColorHint="@color/colorGris"
            android:textColor="@color/colorNegro"
            android:textSize="20sp"
            tools:ignore="MissingConstraints"/>


    </LinearLayout>
    <View
        android:layout_width="fill_parent"
        android:layout_marginLeft="90dp"
        android:layout_height="30dp"
        android:background="@android:color/darker_gray"/>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp">
        <TextView
            android:id="@+id/Icono_Spinner"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:background="@drawable/bank2"
            android:textColor="@color/colorBlancoTransparente"
            android:textSize="35sp"
            android:textStyle="bold"
            tools:ignore="MissingConstraints" />
<EditText
        android:id="@+id/txt_Bancario"
        android:layout_width="200dp"
        android:layout_height="80dp"
        android:layout_marginRight="80dp"
        android:layout_marginLeft="50dp"
        android:editable="false"
        android:ems="10"
        android:hint="Cuenta"
        android:textColorHint="@color/colorGris"
        android:textColor="@color/colorNegro"
        android:textSize="20sp"
        tools:ignore="MissingConstraints"/>
    </LinearLayout>
    <View
        android:layout_width="fill_parent"
        android:layout_marginLeft="90dp"
        android:layout_height="30dp"
        android:background="@android:color/darker_gray"/>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp">
    <TextView
        android:id="@+id/icono_gastos"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:background="@drawable/retirar1"
        android:textSize="35sp"
        android:textStyle="bold"
        tools:ignore="MissingConstraints" />


    <EditText
        android:id="@+id/txt_Gasto"
        android:layout_width="200dp"
        android:layout_height="80dp"
        android:layout_marginRight="80dp"
        android:layout_marginLeft="50dp"
        android:editable="false"
        android:ems="10"
        android:hint="Gastos"
        android:textColorHint="@color/colorGris"
        android:textColor="@color/colorNegro"
        android:textSize="20sp"
        tools:ignore="MissingConstraints"/>
    </LinearLayout>

<View
android:layout_width="fill_parent"
android:layout_marginLeft="90dp"
android:layout_height="30dp"
android:background="@android:color/darker_gray"/>

</LinearLayout>
